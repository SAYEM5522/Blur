{
  "name": "Blurrify",
  "version": "1.0.0",
  "description": "Blur content on any webpage with the customized blur level",
 
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.jpeg",
    "32": "icon.jpeg",
    "48": "icon.jpeg",
    "128": "icon.jpeg"
  },
 
  "background":{
    "service_worker":"background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["contentScript.js"],
      "css": ["content.css"]
    }
  ],
  "manifest_version": 3
}